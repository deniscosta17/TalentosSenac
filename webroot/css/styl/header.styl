
// Header
#header
  width 100%
  height 77px
  background-color rgba(25, 48, 90, 0.9)
  position relative
  z-index 2

#header a
  display inline-block
  padding-left 7px
  padding-right 7px
  text-transform uppercase
  color #EEDFCF
  font-size 15px
  font-family 'Roboto', sans-serif
  font-weight bold
  line-height 77px
  &:hover
    color #f3922e
    text-decoration none
  &.ativo
    background rgba(0, 0, 0, 0.2)
  &:after
    content "::"
    position relative
    left 10px
    color #f3922e
    font-weight bold
  &:last-child:after
    content ""

#main-navbar
  display inline-block
  width 100%
  text-align center

// Logo
#logo-top
  position absolute
  top 0
  left 0
  width 370px
  z-index 3

.tp-banner-container
  width 100%
  position relative
  padding 0
  margin-top -80px
  z-index 1

.tp-banner
  width 100%
  position relative

.tp-banner-fullscreen-container
  width 100%
  position relative
  padding 0

#mobile-menu
  display none !important

#logo-top
  padding-left 0px !important
