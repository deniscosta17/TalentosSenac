.article-name
  text-transform uppercase
  color rgba(243,146,46,1)
  font-weight bold
  font-family 'Roboto', sans-serif
  font-size 24px

.article-excerpt
  font-family 'Roboto', sans-serif
  font-size 16px
  line-height 22px
  color #19305a
  font-weight 300

#articles-list .article
  padding-bottom 12px

  a
    display inline-block
    text-decoration none
    color #19305a
    padding 12px
    width 100%
    border-bottom 1px solid #f3922e
  &:hover
    background rgba(255, 255, 255, 0.3)

  img.img-responsive
    width 100%
    height 90px

#articles-list .article:last-child
  border none

.page-subtitle
  font-family 'Roboto', sans-serif
  font-size 22px
  line-height 28px
  font-weight 300
  margin-top 50px
  margin-bottom 40px

.form-cadastro
  input
    background transparent
    text-transform uppercase
    border 3px solid #19305a
    padding-top 14px
    padding-bottom 14px
    height auto
    box-shadow none !important
    font-family 'Roboto', sans-serif
    font-size 18px
    font-weight 400
    border-radius 8px
    &:focus
      background #19305a
      border 2px solid #19305a !important
      color #FFF

  button
    padding-left 40px
    padding-right 40px
    font-family 'Roboto', sans-serif
    font-weight bold
    text-transform uppercase
    font-size 20px
    background rgba(243,146,46,1)
    border: none !important
    &:hover
      background rgba(243,146,46,0.6)

.center-block
  width 76%
  display block
  margin 0 auto
