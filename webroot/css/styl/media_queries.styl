// Celular
@media only screen and (min-device-width : 320px) and (max-device-width : 768px)
  .text-center-mobile
    text-align center !important

  .container-depoimentos
    height 300px !important

  .depoimento-frase
    font-size 32px !important
    margin-top 120px !important

  .btn-badge
    display none

  #mobile-menu
    display block !important

  .ativo
    background rgba(255,255,255,0.5) !important
    border-bottom 2px solid #19305a

  #logo-top
    width 240px !important
    padding 0px !important
    &:hover
      background transparent

    img
      max-width 100%

  .container-menu
    display none
    position absolute
    left 0px
    top 76px
    width 100%
    z-index 3
    background rgba(22,40,77,0.7)
    box-shadow 3px 30px 50px rgba(0,0,0,0.4)

    a
      color #F5F5F5
      width 100%
      text-align center
      text-shadow 1px 1px 2px rgba(0, 0, 0, 0.7)
      margin-top 1px
      border-bottom 1px solid #F68B1E
      font-size 18px
      height 50px !important
      line-height 50px !important
      &:last-child
        border none !important

  .tp-banner-container
    margin-top 0px !important

  #mobile-menu
    float right !important
    height 77px !important
    line-height 77px !important
    font-size 32px !important
    padding-left 20px !important
    padding-right 20px !important

  #logo-top img,
  #logo-top
    &:after
      content " " !important

  #main-navbar a
    &:after
      content " " !important

  #carouselDepoimentos .carousel-indicators
    display none

  .Documentos-index a
    font-size 14px !important

  #footer
    height 340px !important

  .grid-item
    width 100% !important


// Desktop pequeno
@media screen and (min-width: 780px) and (max-width: 1376px)
  .text-center-mobile
    text-align center !important

  .btn-badge
    display none

  #logo-top img,
  #logo-top
    width 220px
    &:after
      content " " !important

  #main-navbar
    text-align right !important

  #main-navbar a
    padding-left 3px !important
    padding-right 3px !important
    font-size 13px !important
    &:after
      content " " !important

  #btn-facebook img
    height 40px

  .btn-badge img
    height 110px

  .container-depoimentos
    height 300px !important

  .depoimento-frase
    margin-top 120px !important

  #carouselDepoimentos .carousel-indicators
    display none

  .Documentos-index a
    font-size 14px !important

  .grid-item
    width 100% !important

  #footer
    height 340px !important